
@{
    ViewData["Title"] = "Registrations";

}
<p class="pagetitle">Get Customer</p>

<form asp-action="RegProduct" method="get">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" name="ProductID" value="ProductID" />
        <label name="Customer" class="control-label"></label>
        <select name="CustomerID" type="number" class="form-control"
                asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName"))">
            <option value="">Select a customer...</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-primary">Back</a>
    </div>
</form>